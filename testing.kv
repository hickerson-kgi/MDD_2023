<MainWidget>:
    cols: 2
    rows: 5
    spacing: 20
    padding: 20

    Button:
        id: a1_btn
        font_size: 100
        text: '5*2'
        on_press: root.answer('a1_btn')
        on_release: root.generate('a1_btn')
    Button:
        id: a2_btn
        font_size: 100
        text: '3+4'
        on_release: root.generate('a2_btn')
    Button:
        id: b1_btn
        font_size: 100
        text: '8*9'
        on_release: root.generate('b1_btn')
    Button:
        id: b2_btn
        font_size: 100
        text: '6-3'
        on_release: root.generate('b2_btn')
    Button:
        id: c1_btn
        font_size: 100
        text: '3'
        on_release: root.generate('c1_btn')
    Button:
        id: c2_btn
        font_size: 100
        text: '17'
        on_release: root.generate('c2_btn')
    Button:
        id: d1_btn
        font_size: 100
        text: '7'
        on_release: root.generate('d1_btn')
    Button:
        id: d2_btn
        font_size: 100
        text: '10'
        on_release: root.generate('d2_btn')

    Button:
        font_size:100
        text: 'Restart'
        on_release: root.restart_game()
