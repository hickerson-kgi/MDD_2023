<MyButton@Button>:
    background_color: 0.5, 0.5, 0.5, 1  # Grey color

GridLayout:
    cols: 3
    spacing: 10
    padding: 10

    MyButton:
        text: 'Button 1'
        on_release: self.background_color = [0, 0, 1, 1] if self.background_color == [0.5, 0.5, 0.5, 1] else [0.5, 0.5, 0.5, 1]
    MyButton:
        text: 'Button 2'
        on_release: self.background_color = [0, 1, 0, 1] if self.background_color == [0.5, 0.5, 0.5, 1] else [0.5, 0.5, 0.5, 1]
    Button:
        text: 'Button 3'
        on_release: self.background_color = [1, 0, 0, 1] if self.background_color == [0.5, 0.5, 0.5, 1] else [0.5, 0.5, 0.5, 1]

    MyButton:
        text: 'Button 4'
        on_release: self.background_color = [0, 0, 1, 1] if self.background_color == [0.5, 0.5, 0.5, 1] else [0.5, 0.5, 0.5, 1]
    MyButton:
        text: 'Button 5'
        on_release: self.background_color = [0, 1, 0, 1] if self.background_color == [0.5, 0.5, 0.5, 1] else [0.5, 0.5, 0.5, 1]
    Button:
        text: 'Button 6'
        on_release: self.background_color = [1, 0, 0, 1] if self.background_color == [0.5, 0.5, 0.5, 1] else [0.5, 0.5, 0.5, 1]

